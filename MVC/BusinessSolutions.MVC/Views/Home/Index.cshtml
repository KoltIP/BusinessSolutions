@model IEnumerable<BusinessSolutions.MVC.Models.Order.OrderResponse>;

@{
    ViewData["Title"] = "Main Page";
}
<script>  

</script>


<div class="flex-options">

    <div class="flex-option-item">
        <select class="option">
          <option value="0">Не указано</option>
          <option value="1">Синий</option>
          <option value="2">Зеленый</option>
          <option value="3">Желтый</option>
          <option value="4">Красный</option>
          <option value="5">Оранжевый</option>
          <option value="6">Черный</option>
        </select>
    </div>

    <div class="flex-option-item">
        <input class="start-input" alt="Start with" placeholder="last date" type="date" value="" autocomplete="off" />
    </div>

    <div class="flex-option-item">
        <input class="end-input" alt="End" placeholder="last date" type="date" value="" autocomplete="off" />
    </div>

    <div class="flex-option-item">
        <button class="button-accept-filter">
            Применить фильтры
        </button>
    </div>
</div>

<div class="flex-content">
    <table border="1" class="flex-content-item">
        <thead>
           <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Number)</th>
                <th>@Html.DisplayNameFor(model => model.ProviderName)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>            
           </tr>
        </thead>
        <tbody id="content">
            @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProviderName)
                        </td>     
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>  
                        <td>                            
                            <a asp-controller="UpdateOrder" asp-action="Index" asp-route-id="@item.Id">
                                <div class="btn-group btn-group-sm">
                                    <button type="submit" class="button-accept-filter">
                                        <i class="far fa-trash-alt">Update</i>
                                    </button>
                                </div>
                            </a>
                             <a asp-controller="Home" asp-action="DeleteOrder" asp-route-id="@item.Id">
                                <div class="btn-group btn-group-sm">
                                    <button type="submit" class="button-accept-filter">
                                        <i class="far fa-trash-alt">Delete</i>
                                    </button>
                                </div>
                            </a>
                        </td>
                    </tr>
                }   
        </tbody>
      </table>     
</div>

 <a href ="/AddOrder" class="btn btn-secondary">
    Добавить заказ
</a>
