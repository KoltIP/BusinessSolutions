@using BusinessSolutions.MVC.Models.OrderItem
@model BusinessSolutions.MVC.Models.Order.OrderResponse
@{
    ViewData["Title"] = "Update Order Page";
}

<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script>

    function saveChanges() 
    {
        let jprovider = $("#providers").val();
        let jnumber = $("#number").val();
        let jdate = $("#date").val();
        let jcontent = $("#content").val();

        let jrequest = {
            ProviderId: jprovider,
            Number: jnumber,
            Date: jdate,
            Content: jcontent
        };

        let modelId = @Model.Id;
        console.log(modelId);

        $.post("UpdateOrder/update/",
        {   
            id: modelId,
            providerId: jprovider,
            number: jnumber,
            date: jdate,
            content: jcontent
            
        },
        function (data) {
            $(location).attr('href','/');
        })
    }

    $(document).ready(function () {        
        $.get("getproviders/",
            {},
            function (data) {
                displayProviders(data);
            })
    })

    function displayProviders(data) {
        let length = data.length;
        for (let i = 0; i < length; i++) {
            $("#providers").append('<option value="' + data[i].id + '">' + data[i].name + '</option>');
        }
    }

    

</script>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Edit Order</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <select class="option" asp-for="ProviderId" id="providers">
                    
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" value="@Model.Number" id="number"/>
                <span asp-validation-for="Number" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="datetime" value="@Model.Date" id="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            
           <div id="content" class="form-group">
                @if (Model.Content != null)
                {
                    int i = 0;
                    @foreach (var item in Model.Content)
                    {
                        <input asp-for="Content[i]" class="form-control" value="@Model.Content[i]" id="content_@i" />
                    }  
                }
            </div>
            <button >Add item</button>
            
            
            

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                            <input type="submit"
                                   value="Save"
                                   class="btn btn-primary w-100" 
                                   onclick="saveChanges()"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <a href="/" class="btn btn-secondary  w-100">View All</a>
                </div>
            </div>
        
    </div>
</div>
